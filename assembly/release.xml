<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>release</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>*-with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>scripts/mac</directory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>scripts/windows</directory>
            <includes>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/public</outputDirectory>
            <directory>scripts/public</directory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/upgrade-version.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>version.txt</destName>
        </file>
    </files>
</assembly>